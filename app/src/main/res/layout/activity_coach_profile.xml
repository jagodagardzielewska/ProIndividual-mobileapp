<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:padding="16dp"
    tools:context=".CoachProfile">

    <RelativeLayout
        android:id="@+id/page_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/profilebtn"
            android:layout_width="36dp"
            android:layout_height="35dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="15dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/usericon" />

        <ImageButton
            android:id="@+id/backbtn"
            android:layout_width="36dp"
            android:layout_height="35dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="342dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/back" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/layoutl"
        android:layout_width="match_parent"
        android:layout_below="@id/page_title"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:orientation="vertical"
        android:background="@drawable/corners2">

        <ImageView
            android:id="@+id/profile_image"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="50dp"
            app:srcCompat="@drawable/profile_image" />

        <TextView
            android:id="@+id/textView15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Imię"
            android:fontFamily="@font/inter_bold"
            android:textSize="17dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="8dp"
            android:textColor="@color/black"/>

        <EditText
            android:id="@+id/nameEditText"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@drawable/corners1"
            android:backgroundTint="#E6E6E6"
            android:fontFamily="@font/inter_semibold"
            android:textColorHint="#707070"
            android:hint="Imię"
            android:paddingLeft="8dp"
            android:inputType="textEmailAddress"
            android:textSize="17dp"/>

        <TextView
            android:id="@+id/surnameTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nazwisko"
            android:fontFamily="@font/inter_bold"
            android:textSize="17dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="8dp"
            android:textColor="@color/black"/>

        <EditText
            android:id="@+id/surnameEditText"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@drawable/corners1"
            android:backgroundTint="#E6E6E6"
            android:fontFamily="@font/inter_semibold"
            android:textColorHint="#707070"
            android:hint="Nazwisko"
            android:paddingLeft="8dp"
            android:inputType="textEmailAddress"
            android:textSize="17dp"/>


        <TextView
            android:id="@+id/emailTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="E-mail"
            android:fontFamily="@font/inter_bold"
            android:textSize="17dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="8dp"
            android:textColor="@color/black"/>

        <EditText
            android:id="@+id/emailEditText"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@drawable/corners1"
            android:backgroundTint="#E6E6E6"
            android:fontFamily="@font/inter_semibold"
            android:textColorHint="#707070"
            android:hint="E-mail"
            android:paddingLeft="8dp"
            android:inputType="textEmailAddress"
            android:textSize="17dp"/>

        <Button
            android:id="@+id/editprofile_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:backgroundTint="@color/grey"
            android:fontFamily="@font/inter_semibold"
            android:text="Edytuj profil"
            android:textColor="@color/black"
            android:textSize="17dp" />

        <Button
            android:id="@+id/invite_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:backgroundTint="@color/grey"
            android:fontFamily="@font/inter_semibold"
            android:text="Zaproś zawodnika"
            android:textColor="@color/black"
            android:textSize="17dp" />

        <Button
            android:id="@+id/logout_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:backgroundTint="@color/grey"
            android:fontFamily="@font/inter_semibold"
            android:text="Wyloguj się"
            android:textColor="@color/black"
            android:textSize="17dp" />

        <Button
            android:id="@+id/changepassword_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:backgroundTint="@color/grey"
            android:fontFamily="@font/inter_semibold"
            android:text="Zmień hasło"
            android:textColor="@color/black"
            android:textSize="17dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/logotxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/layoutl"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:text="ProIndividual"
        android:textColor="@color/white"
        android:textSize="24dp" />



</RelativeLayout>
