<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:padding="16dp"
    tools:context=".InvitePlayer2">

    <RelativeLayout
        android:id="@+id/page_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/profilebtn"
            android:layout_width="36dp"
            android:layout_height="35dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="15dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/usericon" />

        <ImageButton
            android:id="@+id/backbtn"
            android:layout_width="36dp"
            android:layout_height="35dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="342dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/back" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/layoutl"
        android:layout_width="match_parent"
        android:layout_below="@id/page_title"
        android:layout_height="765dp"
        android:orientation="vertical"
        android:background="@drawable/corners2">

        <TextView
            android:id="@+id/textView12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="150dp"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:fontFamily="@font/inter_bold"
            android:textSize="30dp"
            android:text="Twój kod to: " />

        <TextView
            android:id="@+id/code_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:fontFamily="@font/inter_bold"
            android:textSize="30dp"
            android:text="XXX XXX XXX" />

        <TextView
            android:id="@+id/text_textView"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:fontFamily="@font/inter_bold"
            android:textSize="16dp"
            android:layout_gravity="center_horizontal"
            android:text="Powyższy kod będzie aktywny 24h od momentu wygenerowania. Zaproszony zawodnik będzie mógł zacząć współpracę z Tobą po wpisaniu tego kodu w profilu." />


        <Button
            android:id="@+id/mainpage_button"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:layout_marginBottom="50dp"
            android:backgroundTint="@color/grey"
            android:fontFamily="@font/inter_semibold"
            android:text="Wróć do strony głównej"
            android:textColor="@color/black"
            android:layout_gravity="center_horizontal"
            android:textSize="17dp" />


    </LinearLayout>

    <TextView
        android:id="@+id/logotxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/layoutl"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:text="ProIndividual"
        android:textColor="@color/white"
        android:textSize="24dp" />



</RelativeLayout>