<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:padding="16dp"
    tools:context=".EditProfile">

    <RelativeLayout
        android:id="@+id/page_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/notifsbtn"
            android:layout_width="36dp"
            android:layout_height="35dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="4dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/bell" />

        <ImageButton
            android:id="@+id/profilebtn"
            android:layout_width="36dp"
            android:layout_height="35dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="41dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/usericon" />

        <ImageButton
            android:id="@+id/backbtn"
            android:layout_width="36dp"
            android:layout_height="35dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="342dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/back" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/layoutl"
        android:layout_width="379dp"
        android:layout_below="@id/page_title"
        android:layout_height="622dp"
        android:layout_marginTop="9dp"
        android:orientation="vertical"
        android:background="@drawable/corners2">

        <TextView
            android:id="@+id/textView16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Zmiana E-maila"
            android:textColor="@color/black"
            android:fontFamily="@font/inter_bold"
            android:textSize="30dp"
            android:layout_marginTop="90dp"
            android:textAlignment="center"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Na Twojego obecnego maila wysłaliśmy wiadomość z kodem, który pozwoli Ci na zmianę maila."
            android:textColor="@color/black"
            android:fontFamily="@font/inter_bold"
            android:textAlignment="center"
            android:textSize="18dp"
            android:layout_marginTop="20dp"/>

        <EditText
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:background="@drawable/corners2"
            android:backgroundTint="@color/grey"
            android:layout_marginTop="25dp"
            android:layout_gravity="center_horizontal"
            />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_semibold"
            android:text="Kod powinien mieć dokładnie 6 cyfr."
            android:textColor="@color/error_message"
            android:textSize="15dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_bold"
            android:text="Wiadomość nie dotarła?"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:layout_marginTop="15dp"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_semibold"
            android:text="Wyślij ponownie."
            android:textColor="#707070"
            android:textSize="16dp"
            android:layout_gravity="center_horizontal"
            android:textAlignment="center"/>

        <Button
            android:id="@+id/button"
            android:layout_width="377dp"
            android:layout_height="60dp"
            android:layout_marginTop="40dp"
            android:backgroundTint="@color/grey"
            android:fontFamily="@font/inter_semibold"
            android:textColor="@color/black"
            android:text="Zatwierdź"
            android:textSize="20dp"/>

    </LinearLayout>

    <TextView
        android:id="@+id/logotxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/layoutl"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:text="ProIndividual"
        android:textColor="@color/white"
        android:textSize="24dp" />



</RelativeLayout>