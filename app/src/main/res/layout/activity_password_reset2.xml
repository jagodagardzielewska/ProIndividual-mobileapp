<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PasswordReset2">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="392dp"
        android:layout_height="142dp"
        android:src="@drawable/corners1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.473"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.062"
        app:srcCompat="@drawable/logo2"/>

    <EditText
        android:id="@+id/emailEditText"
        android:layout_width="206dp"
        android:layout_height="49dp"
        android:layout_marginBottom="156dp"
        android:background="@drawable/corners1"
        android:backgroundTint="#E6E6E6"
        android:fontFamily="@font/inter_semibold"
        android:inputType="textEmailAddress"
        android:padding="16dp"
        android:textColorHint="#707070"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button"
        android:layout_width="377dp"
        android:layout_height="57dp"
        android:layout_marginBottom="140dp"
        android:backgroundTint="@color/grey"
        android:fontFamily="@font/inter_semibold"
        android:text="Dalej"
        android:textColor="@color/black"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.441"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button2"
        android:layout_width="377dp"
        android:layout_height="57dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/grey"
        android:fontFamily="@font/inter_semibold"
        android:text="Powrót"
        android:textColor="@color/black"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="324dp"
        android:layout_height="49dp"
        android:layout_marginBottom="36dp"
        android:fontFamily="@font/inter_bold"
        android:text="Wysłaliśmy na twoją skrzynkę wiadomość z kodem."
        android:textAlignment="center"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/emailEditText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_bold"
        android:text="Wiadomość nie dotarła?"
        android:textColor="@color/black"
        android:textSize="18dp"
        tools:layout_editor_absoluteX="100dp"
        tools:layout_editor_absoluteY="416dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_semibold"
        android:text="Wyślij ponownie."
        android:textColor="#707070"
        android:textSize="16dp"
        tools:layout_editor_absoluteX="140dp"
        tools:layout_editor_absoluteY="442dp" />


</androidx.constraintlayout.widget.ConstraintLayout>