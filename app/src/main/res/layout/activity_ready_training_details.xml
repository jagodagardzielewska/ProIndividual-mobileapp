<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:padding="16dp"
    tools:context=".ReadyTrainingDetailsActivity">

    <RelativeLayout
        android:id="@+id/page_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/profilebtn"
            android:layout_width="36dp"
            android:layout_height="35dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="15dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/usericon" />

        <ImageButton
            android:id="@+id/backbtn"
            android:layout_width="36dp"
            android:layout_height="35dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="342dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/back" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/layoutl"
        android:layout_width="match_parent"
        android:layout_height="765dp"
        android:layout_below="@id/page_title"
        android:background="@drawable/corners2"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Dodaj gotowy trening"
            android:textColor="@color/black"
            android:textSize="24dp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"/>


        <TextView
            android:id="@+id/training_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/page_title"
            android:layout_marginTop="20dp"
            android:text="Tytuł"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:fontFamily="@font/inter_semibold"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:id="@+id/training_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/training_title"
            android:text="Kategoria"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:fontFamily="@font/inter_regular"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:id="@+id/training_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/training_category"
            android:text="Opis"
            android:textColor="#707070"
            android:textSize="18dp"
            android:fontFamily="@font/inter_semibold"
            android:layout_marginLeft="10dp"/>

        <EditText
            android:id="@+id/training_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/training_details"
            android:layout_marginTop="20dp"
            android:hint="Wprowadź datę"
            android:textColorHint="#707070"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:background="@drawable/corners3"
            android:fontFamily="@font/inter_semibold"/>

        <Button
            android:id="@+id/add_training_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/training_date"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/grey"
            android:text="Dodaj ten trening"
            android:textColor="@color/black"
            android:textSize="18sp"/>


    </LinearLayout>

    <TextView
        android:id="@+id/logotxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/layoutl"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:text="ProIndividual"
        android:textColor="@color/white"
        android:textSize="24dp" />



</RelativeLayout>